<!doctype html>
<html lang="en">
<head>
    {{> head }}
</head>
<body>
{{> navbar }}
<div class="container">
    <h1 class="text-center text-light py-3">Image jobs</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th></th>
            <th scope="col">Name</th>
            <th scope="col">Time elapsed</th>
            <th scope="col">Processed at</th>
            <th scope="col">Created at</th>
            <th scope="col">Download</th>
        </tr>
        </thead>
        <tbody>
        {{#each jobs as |job|}}
            <tr>
                <td>{{#if job.thumbnail}}<img class="thumbnail" src="{{job.thumbnail}}" alt="thumbnail" width="50" height="50">{{/if}}</td>
                <th class="align-middle" scope="row">{{job.id}}</th>
                <td class="align-middle">{{job.processingTime}}</td>
                <th class="align-middle">{{job.processedAt}}</th>
                <th class="align-middle">{{job.createdAt}}</th>
                <td class="align-middle">{{#if job.blurred}}<a href="{{job.blurred}}" target="_blank">Download</a> {{/if}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    <nav>
        <ul class="pagination">
            <li class="page-item"><a class="page-link {{#unless previousPage}}disabled{{/unless}}" href="?page={{previousPage}}">Previous</a></li>
            <li class="page-item"><a class="page-link disabled" href="#">{{currentPage}}/{{pages}}</a></li>
            <li class="page-item"><a class="page-link {{#unless nextPage}}disabled{{/unless}}" href="?page={{nextPage}}">Next</a></li>
        </ul>
    </nav>
</div>

{{> scriptsBottom }}
</body>
</html>
