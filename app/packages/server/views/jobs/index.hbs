<!doctype html>
<html lang="en">
<head>
    {{> head }}
</head>
<body>
<div class="container p-3">
    <h1 class="text-center">Completed jobs</h1>

    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th></th>
            <th scope="col">#</th>
            <th scope="col">Time elapsed</th>
            <th scope="col">Download</th>
        </tr>
        </thead>
        <tbody>
        {{#each jobs as |job|}}
            <tr>
                <td>{{#if job.thumbnail}}<img src="{{job.thumbnail}}" alt="thumbnail" width="50" height="50">{{/if}}</td>
                <th scope="row">{{job.id}}</th>
                <td>{{job.processingTime}}</td>
                <td>{{#if job.blurred}}<a href="{{job.blurred}}" target="_blank">Download</a> {{/if}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

{{> scriptsBottom }}
</body>
</html>
